{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "./dist",
    "stripInternal": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "projects/angular2-promise-buttons-demo/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "./scripts/typings.d.ts",
    "./projects/angular2-promise-buttons-demo/src/index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
